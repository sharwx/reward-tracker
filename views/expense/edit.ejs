<%- include('./../partials/header'); %>

<div class="container">
    <h1>
        <%= pageTitle %>
    </h1>

    <form action="/expenses/<%= itemID %>?_method=PATCH" method="POST">
        <div class="form-group">
            <label for="date">Date</label>
            <input type="text" class="form-control" name="date" id="date" value="<%= item.date %>">
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <input type="text" class="form-control" name="description" id="description" value="<%= item.description %>">
        </div>

        <div class="form-group">
            <label for="amount">Amount</label>
            <input type="text" class="form-control" name="amount" id="amount" value="<%= item.amount %>">
        </div>

        <div class="form-group">
            <label for="payment_mthd">Payment Method</label>
            <select type="text" class="form-control" name="payment_mthd" id="payment_mthd" value="<%= item.payment_mthd %>">
              <option>Lady's Card</option>
              <option>Preferred Platinum Visa</option>
              <option>Revolution</option>
              <option>Titanium</option>
              <option>Woman's World Card</option>
              <option>Advance</option>
            </select>
        </div>

        <div class="form-group">
            <label for="category">Category</label>
            <select type="text" class="form-control" name="category" id="category" value="<%= item.category %>">
              <option>Beauty & Wellness</option>
              <option>Fashion</option>
              <option>Dining</option>
              <option>Family</option>
              <option>Travel</option>
              <option>Transport</option>
              <option>Entertainment</option>
            </select>
        </div>

        <div class="form-group">
            <label for="remarks">Remarks</label>
            <input type="remarks" class="form-control" name="remarks" id="remarks" value="<%= item.remarks %>">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>


<%- include('./../partials/footer'); %>