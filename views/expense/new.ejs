<%- include('./../partials/header'); %>

<div class="container">
    <h1>
        <%= pageTitle %>
    </h1>

    <form action="/expenses" method="POST">
        <div class="form-group">
            <label for="date">Date</label>
            <input type="text" class="form-control" placeholder="DD MMM YYYY (eg: 01 Jan 2020)" name="date" id="date">
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <input type="text" class="form-control" name="description" id="description">
        </div>

        <div class="form-group">
            <label for="amount">Amount</label>
            <input type="text" class="form-control" name="amount" id="amount">
        </div>

        <div class="form-group">
            <label for="payment_mthd">Payment Method</label>
            <select type="text" class="form-control" name="payment_mthd" id="payment_mthd">
              <option>Lady's Card</option>
              <option>Preferred Platinum Visa</option>
              <option>Revolution</option>
              <option>Titanium</option>
              <option>Woman's World Card</option>
              <option>Advance</option>
            </select>
        </div>

        <div class="form-group">
            <label for="category">Category</label>
            <select type="text" class="form-control" name="category" id="category">
              <option>Beauty & Wellness</option>
              <option>Fashion</option>
              <option>Dining</option>
              <option>Family</option>
              <option>Travel</option>
              <option>Transport</option>
              <option>Entertainment</option>
            </select>
        </div>

        <div class="form-group">
            <label for="remarks">Remarks</label>
            <input type="text" class="form-control" name="remarks" id="remarks">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<%- include('./../partials/footer'); %>